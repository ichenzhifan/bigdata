.modal-header
    h4.modal-title 用户信息编辑
.modal-body
    .form-group
        label 用户ID
        input.form-control(type="text" ng-model="user.user_id" disabled)
    .form-group
        label 姓名
        input.form-control(type="text" ng-model="user.name" required)
    .form-group
        label 邮箱
        input.form-control(type="email" ng-model="user.username" required)
    .form-group
        label 密码
        .whaley-flex-container
            input.form-control.whaley-flex-element(type="password" ng-model="user.originPassword" disabled)
            button.btn.btn-primary(style="margin-left:10px;" ng-click="changePassword()")
                |{{collapsed ? '取消':'修改'}}
                span.animate-icon(ng-class="{'triexpand': collapsed}") ▼   
    div.password-panel(ng-class="{'show':collapsed}")
        div(style="padding:5px;")
            .form-group
                label 新密码
                input.form-control(type="password" ng-model="user.password" required)
                label 新密码确认
                input.form-control(type="password" ng-model="user.passwordConfirm" required)
    .form-group
        label 群组
        select.form-control( ng-model="user.group_id" ng-options=" g.group_id as g.group_name for g in group ")  
            option 请选择群组
    .form-group
        label 备注
        input.form-control(type="text" ng-model="user.remark" )
    .form-group.clearfix
        .row
            .col-sm-6
                .icheckContainer
                    ichecker(i-model="user.is_admin" i-text="是否为管理员")
            .col-sm-6
                span.lineLabel 用户状态
                iswitch(ontext="启用"  offtext="停用" flag="user.user_state")
.modal-footer
    button.btn.btn-primary(ng-click="ok()") 保存
    button.btn.btn-warning(ng-click="cancel()") 取消   


