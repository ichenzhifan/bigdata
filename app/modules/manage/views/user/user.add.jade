.modal-header
    h4.modal-title 用户信息编辑
.modal-body
    form(ng-submit="ok()")
        .form-group
            label 姓名
            input.form-control(type="text" ng-model="user.name" required)
        .form-group
            label 邮箱
            input.form-control(type="email" ng-model="user.username" required)
        .form-group
            label 密码
            input.form-control(type="password" ng-model="user.password" required)
        .form-group
            label 密码确认
            input.form-control(type="password" ng-model="user.passwordConfirm" required)
        .form-group
            label 群组
            select.form-control( ng-model="user.group_id" ng-options=" g.group_id as g.group_name for g in group " ng-disabled="manager.group_id != 'root'" required)
                option 请选择群组
        .form-group
            label 备注
            input.form-control(type="text" ng-model="user.remark" )
        .form-group.clearfix
            .row
                .col-sm-6
                    .icheckContainer
                        ichecker(i-model="user.is_admin" i-text="是否为管理员")
                .col-sm-6
                    span.lineLabel 用户状态
                    iswitch(ontext="启用"  offtext="停用" flag="user.user_state")
        .modal-footer
            button.btn.btn-primary(type="submit") 保存
            a.btn.btn-warning(ng-click="cancel()") 取消   


