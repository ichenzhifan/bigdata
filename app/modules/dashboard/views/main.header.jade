		ul.nav.navbar-nav
			//- li.dropdown.messages-menu
			//- 	a(href="javascript:void(0);")
			//- 		i.fa.fa-envelope-o
			//- 		span.label 4
			li.dropdown.user.user-menu(uib-dropdown is-open="isopen")
				a#useredit(href="javascript:void(0);" uib-dropdown-toggle)
					img.user-image(src="image/avatar.png")
					span.hidden-xs(ng-bind="user.name")
					|&nbsp;
					span.caret
				ul(uib-dropdown-menu role="menu" aria-labelledby="useredit" style="background:#fff")
					li(role="menuitem")
						a(href="javascript:void(0);" ng-click="choosePassword($event)") 
							i.fa.fa-lock &nbsp;
							span 修改密码
			//- li.borderLeft(ng-if="msgList.length > 0")
