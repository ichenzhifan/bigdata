	.navmenu.collapse.navbar-collapse
		ul.nav.navbar-nav
			li(ui-sref-active="active")
				a(ui-sref="dashboard.data") 
					span.i-container
						i.fa.fa-bar-chart-o
					|&nbsp;数据图表
			li(ui-sref-active="active" ng-if="user.is_admin === 1")
				a(ui-sref="dashboard.manage") 
					span.i-container
						i.fa.fa-user
					|&nbsp;后台管理
			li(ui-sref-active="active" ng-if="user.group_id === 'root'")
				a(ui-sref="dashboard.app") 
					span.i-container
						i.fa.fa-pencil
					|&nbsp;应用管理
